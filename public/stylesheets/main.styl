html
	height 100%
	
	body
		background url('../images/background.jpg') center center no-repeat
		background-attachment fixed
		background-size cover
		font-family Muli
		min-height 100%
		padding 1px 0
		position relative
		
		.overlay
			background-color black
			bottom 0
			left 0
			position absolute
			right 0
			top 0
			opacity .4
			z-index -1
			
		.top-menu
			background-color rgba(black, .5)
			padding 15px
			z-index 1000
			
			@media screen and (max-width: 991px)
				text-align center
			
			.brand
				display inline-block
				
				.logo
					height 80px
				
			.tabs
				display inline-block
				float right
				
				.tab
					color white
					font-size 18px
					font-weight bold
					text-decoration none
					text-transform uppercase
					line-height 80px
					padding 0 10px
					transition color 0.6s ease
					
					&:hover
						color #E7B53D
					
					&.selected
						color #E7B53D
			
		.footer
			background-color rgba(black, .2)
			bottom 0
			color white
			font-size 12px
			padding 15px 0
			position absolute
			width 100%
			
			.container
				line-height 30px
				
				.text
					display inline-block
					margin 0
					
@font-face {
	font-family Muli
	font-weight normal
	src url('../fonts/Muli.ttf')
}

@font-face {
	font-family Muli
	font-weight bold
	src url('../fonts/Muli-Bold.ttf')
}