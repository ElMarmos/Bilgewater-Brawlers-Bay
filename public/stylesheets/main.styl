amarillo=#E7B53D;

html
	height 100%
	
	body
		background url('../images/background.jpg') center center no-repeat
		background-attachment fixed
		background-size cover
		color white
		font-family Muli
		min-height 100%
		padding 1px 0
		position relative
		
		.overlay
			background-color black
			bottom 0
			left 0
			opacity .4
			position absolute
			right 0
			top 0
			z-index -1
			
		.divider
			background url('../images/divider.png') center no-repeat
			height 120px
			
		.view-title
			text-align center
			
			.title-text
				font-weight bold
				margin-top 0
				text-transform uppercase
				margin-bottom 20px
				
			.legend
				font-size 18px
				margin 0
				
				span
					text-shadow 0 0 50px amarillo
					color amarillo
			
		.top-menu
			background rgba(black, .5)
			margin-bottom 40px
			padding 15px
			z-index 1000
			
			@media screen and (max-width: 991px)
				text-align center
			
			.brand
				display inline-block
				
				a
					display inline-block
				
					.logo
						height 80px
				
			.tabs
				display inline-block
				float right
				
				.tab
					color white
					font-size 18px
					font-weight bold
					text-decoration none
					text-transform uppercase
					line-height 80px
					padding 0 10px
					transition color 0.6s ease
					
					&:hover
						color amarillo
					
					&.selected
						color amarillo
						
		.app-champions-index
			margin-bottom 129px
			
			.champions-grid
				font-size 0
				text-align center

				.champion
					-webkit-filter: grayscale(60%)
					display inline-block !important
					text-align center
					text-decoration none
					transition all 0.5s ease
					margin-bottom 0px
					
					&.hidden
						opacity 0
						
					&.visible
						opacity 1
					
					&:hover
						-webkit-filter: grayscale(0)
						
						.champion-img
							background-position center 25%
							background-size auto 300px
							
							.name
								opacity 1
					
					.champion-img
						background-position center
						background-repeat no-repeat
						background-size auto 225px
						height 200px
						position relative
						transition all 0.4s ease
						width 100px
						
						.name
							background linear-gradient(transparent, black 90%)
							bottom 0
							color amarillo
							font-size 14px
							height 100px
							line-height 172px
							opacity 0
							position absolute
							transition all 0.4s ease
							width 100%
			
		.footer
			background-color rgba(white, .05)
			bottom 0
			font-size 12px
			padding 15px 0
			position absolute
			width 100%
			
			.container
				line-height 30px
				
				.text
					display inline-block
					margin 0
					
@font-face {
	font-family Muli
	font-weight normal
	src url('../fonts/Muli.ttf')
}

@font-face {
	font-family Muli
	font-weight bold
	src url('../fonts/Muli-Bold.ttf')
}