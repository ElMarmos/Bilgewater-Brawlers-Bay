amarillo=#E7B53D;

html
	height 100%
	
	body
		background url('../images/background.jpg') center center no-repeat
		background-attachment fixed
		background-size cover
		color white
		font-family Muli
		min-height 100%
		padding 1px 0
		position relative
		
		.loading
			align-items center
			background-color black
			display flex
			height 100%
			left 0
			opacity .8
			position fixed
			top 0
			width 100%
			z-index 1000
			
			.centered
				display inline-block
				margin 0 auto
				
				.spinner
					-moz-animation spin 1s linear infinite
					-webkit-animation spin 1s linear infinite
					animation spin 1s linear infinite
					height 80px
		
		.overlay
			background-color black
			bottom 0
			left 0
			opacity .4
			position absolute
			right 0
			top 0
			z-index -1
			
		.divider
			background url('../images/divider.png') center no-repeat
			height 120px
			
		.view-title
			text-align center
			
			.title-text
				font-weight bold
				margin-top 0
				text-transform uppercase
				margin-bottom 20px
				
			.legend
				font-size 18px
				margin 0
				
				span
					text-shadow 0 0 50px amarillo
					color amarillo
			
		.top-menu
			background rgba(black, .5)
			margin-bottom 40px
			padding 15px
			z-index 1000
			
			@media screen and (max-width: 991px)
				text-align center
			
			.brand
				display inline-block
				
				a
					display inline-block
				
					.logo
						height 80px
				
			.tabs
				display inline-block
				float right
				
				.tab
					color white
					font-size 18px
					font-weight bold
					text-decoration none
					text-transform uppercase
					line-height 80px
					padding 0 10px
					transition color 0.6s ease
					
					&:hover
						color amarillo
					
					&.selected
						color amarillo
						
		.app-champions-index
			margin-bottom 129px
			
			.championResume
				border-color rgba(amarillo, .25)
				border-radius 5px
				border-style solid
				border-width 0 1px 0 1px
				box-shadow 0px 0px 10px 5px rgba(amarillo, .05)
				overflow hidden

				.header
					background rgba(black,0.75)
					border-bottom 1px solid rgba(amarillo, .25)
					padding 20px
					position relative
					
					#crImg
						border-radius 50%
						display inline-block
						height 80px
						width 80px
						position relative
						
						.animation
							-moz-animation spin 3s linear infinite
							-webkit-animation spin 3s linear infinite
							animation spin 3s linear infinite
							border-color amarillo
							border-radius 50%
							border-style solid
							border-width 2px 0 0 0
							box-shadow 0px 0px 5px amarillo
							height 80px
							left 0
							position absolute
							top 0
							width 80px
					
					h1
						color amarillo
						display inline-block
						left 110px
						margin 0
						position absolute
						top 36px
						
				.content
					background rgba(black, .5)
					padding 20px
					
					.brawCont
						padding 20px
						display inline-block
						position relative
						
						.graphIconBraw
							border-radius 50%
							height 30px
							position absolute
							border 1px solid white
							
							&.one
								left 0
								top 155px
								
							&.two
								top 0
								left 156px

							&.three
								right 0px
								top 155px
								
							&.four
								bottom 5px
								left 156px
			
			.champions-grid
				font-size 0
				text-align center

				.champion
					-webkit-filter: grayscale(60%)
					display inline-block !important
					text-align center
					text-decoration none
					transition all 0.5s ease
					margin 5px
					
					&.hidden
						opacity 0
						
					&.visible
						opacity 1
					
					&:hover
						-webkit-filter: grayscale(0)
						
						.champion-img
							background-position center 25%
							background-size auto 300px
							
							.name
								opacity 1
					
					.champion-img
						background-position center
						background-repeat no-repeat
						background-size auto 225px
						height 200px
						position relative
						transition all 0.4s ease
						width 100px
						
						.name
							background linear-gradient(transparent, black 90%)
							bottom 0
							color amarillo
							font-size 14px
							height 100px
							line-height 172px
							opacity 0
							position absolute
							transition all 0.4s ease
							width 100%
			
		.footer
			background-color rgba(white, .05)
			bottom 0
			font-size 12px
			padding 15px 0
			position absolute
			width 100%
			
			.container
				line-height 30px
				
				.text
					display inline-block
					margin 0
					
@-moz-keyframes spin {
	from { -moz-transform: rotate(0deg); }
	to { -moz-transform: rotate(360deg); }
}
@-webkit-keyframes spin {
	from { -webkit-transform: rotate(0deg); }
	to { -webkit-transform: rotate(360deg); }
}
@keyframes spin {
	from {transform:rotate(0deg);}
	to {transform:rotate(360deg);}
}
					
@font-face {
	font-family Muli
	font-weight normal
	src url('../fonts/Muli.ttf')
}

@font-face {
	font-family Muli
	font-weight bold
	src url('../fonts/Muli-Bold.ttf')
}